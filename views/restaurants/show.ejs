        <form action="/restaurants/<%= restaurant._id %>/edit" method="GET">
          <button class="btn" type="submit">Edit this Review!</button>
        </form>
      <% } %>
      <form action="/restaurant/<%= restaurant._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit">Delete this review! </button>
      </form>
  <% } %>


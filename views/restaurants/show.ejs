<section>
	<p>Reviewer <%= restaurant.owner.name %>...</p>
  <h1><%= restaurant.name %> </h1>
  <h2> Would you reccomend this restaurant? <%= restaurant.wouldRecommend? 'Yes!! ðŸ˜‹' : 'not at all!! ðŸ˜«' %></h2>
  <% if (user) { %> 
    <form 
      action="/restaurants/<%= restaurant._id %>/flip-wouldRecommend?_method=PATCH" 
      method="POST"
    >
      <button class="btn" type="submit">
        Update Review <%= restaurant.wouldRecommend ? 'Yes!!' : 'not at all!' %>
      </button>
    </form>
    <!-- making sure user/taco maker is the person logged in -->
